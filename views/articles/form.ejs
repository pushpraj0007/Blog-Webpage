<div class="form-group">
  <label for="author">Author</label>
  <input required value="<%= article.author %>" type="text" name="author" id="author" class="form-control">
</div>
<div class="form-group">
  <label for="title">Title</label>
  <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control">
</div>
<div class="mb-3">
  <label for="img" class="form-label">Image Url</label>
  <input required value="<%= article.img %>" class="form-control" type="text" id="img" name="img">
</div>
